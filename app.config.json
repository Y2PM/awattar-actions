{
  "environmentUrl": "https://tfm90892.sprint.apps.dynatracelabs.com/",
  "app": {
    "name": "awattar-actions",
    "version": "0.2.3",
    "description": "A starting project with routing, fetching data, and charting",
    "id": "my.awattar.actions",
    "scopes": [
      {
        "name": "storage:logs:read",
        "comment": "default template"
      },
      {
        "name": "storage:buckets:read",
        "comment": "default template"
      },
      {
        "name": "app-settings:objects:read",
        "comment": "To read app settings"
      },
      {
        "name": "app-settings:secrets:read",
        "comment": "Required to access connection secrets"
      },
      {
        "name": "environment-api:events:write",
        "comment": "Required to create custom events from the action"
      }
    ],
    "actions": [
      {
        "name": "fetch-data",
        "title": "Fetch data",
        "description": "Evaluates a DQL query and optionally creates a problem or sends an HTTP request."
      }
    ],
    "settings": {
      "schemas": [
        {
          "name": "fetch-data-connection",
          "schemaIds": [
            "fetch-data-connection"
          ],
          "file": "settings/schemas/fetch-data.schema.json"
        }
      ]
    }
  }
}
