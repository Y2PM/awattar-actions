      },
      {
        "name": "app-settings:objects:read",
        "comment": "To read app settings"
      },
      {
        "name": "app-settings:secrets:read",
        "comment": "Required to access connection secrets"
      },
      {
        "name": "environment-api:events:write",
        "comment": "Required to create custom events from the action"
      }
    ],
    "actions": [
      {
        "name": "fetch-data",
        "title": "FetchData",
        "description": "Change description in the app.config.json"
      }
    ],
    "settings": {
      "schemas": [
        {
          "schemaId": "fetch-data-connection",
          "file": "settings/schemas/fetch-data.schema.json"
        }
      ]
    }
  }
}
